<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">
	<CheckBoxPreference
		android:title="Auto tag location"
		android:summary="Tag location automatically when creating new wishes"
		android:defaultValue="true"
		android:key="autoLocation"
		android:layout="@xml/checkbox_preference_style"/>

    <EditTextPreference
        android:title="Currency symbol"
        android:summary="$"
        android:key="currency"
        android:layout="@xml/preference_style"/>

	<Preference
		android:title="Release notes"
		android:key="releaseNotes"
		android:layout="@xml/preference_style"/>

	<Preference
		android:title="Rate the app"
		android:key="rateApp"
		android:layout="@xml/preference_style"/>

</PreferenceScreen>
