<?xml version="1.0" encoding="utf-8"?>
<resources>
	<style name="Theme.D1" parent="android:style/Theme.Holo.Light">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>
    
	<style name="TitleBar" parent="android:style/Theme.Holo.Light">
        <item name="android:id">@id/title_container</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">@dimen/headBar_height</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:background">@color/headBarBackground_dark_grey</item>
    </style>
        
	<style name="TitleBarAction" parent="android:style/Theme.Holo.Light">
        <item name="android:layout_width">@dimen/title_imageButtonHeight</item>
        <item name="android:layout_height">fill_parent</item>
		<item name="android:background">?android:selectableItemBackground</item>
    </style>
    
	<style name="TitleBarWish" parent="android:style/Theme.Holo.Light">
        <item name="android:id">@id/title_wish</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">left</item>
        <item name="android:clickable">false</item>
        <item name="android:scaleType">fitStart</item>
    </style>
    
	<style name="TitleBarWishBack" parent="android:style/Theme.Holo.Light">
        <item name="android:layout_width">@dimen/title_wish_back_width</item>
        <item name="android:layout_height">fill_parent</item>
        <item name="android:gravity">left</item>
        <item name="android:clickable">true</item>
        <item name="android:scaleType">fitCenter</item>
		<item name="android:background">?android:selectableItemBackground</item>
    </style>
    
	<style name="FooterBar" parent="android:style/Theme.Holo.Light">
    	<item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">@dimen/footBar_height</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:layout_alignParentBottom">true</item>
        <item name="android:background">@color/footerBarBackground_dark_grey</item>
	</style>
</resources>
