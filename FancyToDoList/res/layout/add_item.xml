<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/addItem"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:orientation="vertical" >

	<LinearLayout style="@style/TitleBar"
	android:id="@+id/addItem_top"
	android:layout_alignParentTop="true">
		
		<ImageButton
		    android:id="@+id/imageButton_back_logo"
		    style="@style/TitleBarBackLogo"
		    android:contentDescription="@string/description_back_logo"
		    android:onClick="onClickHome"
		    android:src="@drawable/ic_back_logo" />
			
		<TextView style="@style/TitleBarText"
			android:contentDescription="@string/make_a_wish" android:text="@string/make_a_wish" />
<!-- 	<ImageButton style="@style/TitleBarAction"
			android:contentDescription="@string/description_search" android:src="@drawable/title_search"
			android:onClick="onClickSearch" />
-->
		<ImageButton style="@style/TitleBarAction"
			android:id="@+id/imageButton_save"
			android:contentDescription="@string/description_save" android:src="@drawable/ic_menu_save"
			android:onClick="onClickSave" />
	</LinearLayout>

	<ScrollView android:orientation="vertical"
		android:layout_width="fill_parent" android:layout_height="wrap_content"
		android:layout_below="@+id/addItem_top">

		<LinearLayout android:orientation="vertical"
			android:layout_width="fill_parent" android:layout_height="wrap_content">
			<EditText android:layout_width="fill_parent" android:id="@+id/itemname"
				android:layout_height="wrap_content" android:hint="Item Name"
				android:layout_weight="1" />

			<EditText android:layout_width="fill_parent" android:id="@+id/description"
				android:layout_height="wrap_content" android:hint="Description"
				android:gravity="top" android:layout_weight="1" />

			<EditText android:layout_width="fill_parent" android:id="@+id/price"
				android:layout_height="wrap_content" android:hint="price"
				android:gravity="top" android:inputType="numberDecimal"
				android:layout_weight="1" />

			<EditText android:layout_width="fill_parent" android:id="@+id/location"
				android:layout_height="wrap_content" android:hint="location"
				android:gravity="top" android:inputType="textPostalAddress"
				android:layout_weight="1" />

			<LinearLayout android:layout_height="wrap_content"
				android:id="@+id/linearLayout1" android:layout_width="fill_parent"
				android:padding="10dip" android:layout_weight="1">

				<ImageView android:layout_width="fill_parent"
					android:layout_height="wrap_content" android:id="@+id/image_photo"
					android:tint="#55ff0000" android:src="@drawable/icon"
					android:layout_weight="1" />
			</LinearLayout>
		</LinearLayout>
	</ScrollView>

	<LinearLayout style="@style/FooterBar">"
		<ImageButton style="@style/TitleBarAction"
			android:id="@+id/imageButton_map"
			android:contentDescription="@string/description_location" android:src="@drawable/ic_map_pin"
			android:onClick="onClickMap" android:layout_gravity="left"
			android:layout_weight="1"/>
		<ImageButton style="@style/TitleBarAction"
			android:id="@+id/imageButton_camera"
			android:contentDescription="@string/description_camera" android:src="@drawable/ic_menu_camera"
			android:onClick="onClickCamera" android:layout_gravity="left"
			android:layout_weight="1"/>
		<ImageButton style="@style/TitleBarAction"
			android:id="@+id/imageButton_gallery"
			android:contentDescription="@string/description_gallery" android:src="@drawable/ic_menu_gallery"
			android:onClick="onClickGallery" android:layout_gravity="right"
			android:layout_weight="1" />
	</LinearLayout>

</RelativeLayout>
