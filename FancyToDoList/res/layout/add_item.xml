<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:id="@+id/addItem" android:orientation="vertical"
	android:layout_width="fill_parent" android:layout_height="wrap_content">
	<LinearLayout android:id="@+id/addItem_top"
	android:layout_width="fill_parent"
        android:layout_height="45dip"
        android:orientation="horizontal"
        android:background="@color/title_background"
		android:layout_alignParentTop="true">
		
		<TextView style="@style/TitleBarText"
			android:contentDescription="@string/description_logo" android:text="@string/app_name" />

		<ImageView style="@style/TitleBarSeparator" />
		<TextView style="@style/TitleBarText" />
		<ImageButton style="@style/TitleBarAction"
			android:contentDescription="@string/description_about" android:src="@drawable/title_about"
			android:onClick="onClickAbout" />
		<ImageButton style="@style/TitleBarAction"
			android:contentDescription="@string/description_search" android:src="@drawable/title_search"
			android:onClick="onClickSearch" />
	</LinearLayout>

	<ScrollView android:orientation="vertical"
		android:layout_width="fill_parent" android:layout_height="wrap_content"
		android:layout_below="@+id/addItem_top">

		<LinearLayout android:orientation="vertical"
			android:layout_width="fill_parent" android:layout_height="wrap_content">
			<EditText android:layout_width="fill_parent" android:id="@+id/itemname"
				android:layout_height="wrap_content" android:hint="Item Name"
				android:layout_weight="1" />

			<EditText android:layout_width="fill_parent" android:id="@+id/description"
				android:layout_height="wrap_content" android:hint="Description"
				android:gravity="top" android:layout_weight="1" />

			<EditText android:layout_width="fill_parent" android:id="@+id/price"
				android:layout_height="wrap_content" android:hint="price"
				android:gravity="top" android:inputType="number"
				android:layout_weight="1" />

			<EditText android:layout_width="fill_parent" android:id="@+id/location"
				android:layout_height="wrap_content" android:hint="location"
				android:gravity="top" android:layout_weight="1" />

			<TextView android:layout_width="fill_parent"
				android:layout_height="wrap_content" android:text="Select a date"
				android:layout_weight="1" />

			<Button android:layout_width="fill_parent"
				android:layout_height="wrap_content" android:id="@+id/button_date"
				android:text="click to set time" android:layout_weight="1" />

			<LinearLayout android:layout_height="wrap_content"
				android:id="@+id/linearLayout1" android:layout_width="fill_parent"
				android:padding="10dip" android:layout_weight="1">

				<Button android:layout_width="fill_parent"
					android:layout_height="wrap_content" android:id="@+id/button_photo"
					android:text="Take a photo" android:layout_weight="1" />

				<ImageView android:layout_width="fill_parent"
					android:layout_height="wrap_content" android:id="@+id/image_photo"
					android:tint="#55ff0000" android:src="@drawable/icon"
					android:layout_weight="1" />

			</LinearLayout>

			<LinearLayout android:layout_height="wrap_content"
				android:id="@+id/linearLayout1" android:layout_width="fill_parent"
				android:padding="10dip" android:layout_weight="1">
				<Button android:layout_width="fill_parent"
					android:layout_height="wrap_content" android:id="@+id/button_save"
					android:text="Save" android:layout_weight="1" />
				<Button android:layout_width="fill_parent"
					android:layout_height="wrap_content" android:id="@+id/button_cancel"
					android:text="Cancel" android:layout_weight="1" />
			</LinearLayout>
		</LinearLayout>
	</ScrollView>

	<LinearLayout android:layout_width="fill_parent"
        android:layout_height="45dip"
        android:orientation="horizontal"
        android:layout_alignParentBottom="true"
        android:background="@color/title_background">
		<ImageButton style="@style/TitleBarAction"
			android:contentDescription="@string/description_about" android:src="@drawable/title_about"
			android:onClick="onClickAbout" />
		<ImageButton style="@style/TitleBarAction"
			android:contentDescription="@string/description_search" android:src="@drawable/title_search"
			android:onClick="onClickSearch" />
	</LinearLayout>

</RelativeLayout>
