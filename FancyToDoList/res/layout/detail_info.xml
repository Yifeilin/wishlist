<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#FFFFFFFF"
    >

	<EditText android:layout_width="fill_parent" 
    android:id="@+id/itemname" 
    android:layout_height="wrap_content" 
    android:hint="Item Name"
    />
    
    <EditText android:layout_width="fill_parent" 
    android:id="@+id/description"
    android:layout_height="wrap_content"  
    android:hint="Description"
   />
    
    <TextView android:layout_width="fill_parent" 
    android:layout_height="wrap_content" 
    android:text="Select a date"
    />
    
    <Button android:layout_width="fill_parent" 
    android:layout_height="wrap_content" 
    android:id="@+id/button_date" 
    android:text="click to set due time"
    />
    
    <LinearLayout android:layout_height="wrap_content" android:id="@+id/linearLayout1" 
    android:layout_width="fill_parent"
   	android:padding="10dip">
    
    <Button android:layout_width="fill_parent" 
    android:layout_height="wrap_content" 
    android:id="@+id/button_photo" 
    android:text="Take a photo"
    android:layout_weight="1"/>
    
    <ImageView   
 	android:layout_width="fill_parent"
  	android:layout_height="wrap_content"
  	android:id="@+id/image_photo"
  	android:tint="#55ff0000"
  	android:src="@drawable/icon"
  	android:layout_weight="1"/>
    
    </LinearLayout>
    
    <TextView android:layout_width="fill_parent" 
    android:layout_height="wrap_content" 
    android:text="Select priority"
    android:layout_weight="0"/>
    
     <RadioGroup
      android:layout_width="fill_parent"
      android:layout_height="wrap_content"
      android:orientation="horizontal"
      android:background="@color/black"
      android:layout_weight="0">
      <RadioButton android:id="@+id/radio_high"
          android:layout_width="fill_parent"
          android:layout_height="wrap_content"
          android:layout_weight="1"
          android:text="High"
          android:textColor="@color/red"
          />
      <RadioButton android:id="@+id/radio_medium"
          android:layout_width="fill_parent"
          android:layout_height="wrap_content"
          android:layout_weight="1"
          android:text="Medium" 
           android:textColor="@color/yellow"
          />
      <RadioButton android:id="@+id/radio_low"
          android:layout_width="fill_parent"
          android:layout_height="wrap_content"
          android:layout_weight="1"
          android:text="Low"
           android:textColor="@color/green"
          />
    </RadioGroup>
    
    <LinearLayout android:layout_height="wrap_content" android:id="@+id/linearLayout1" android:layout_width="fill_parent"
    android:padding="10dip">
        <Button android:layout_width="fill_parent" 
        android:layout_height="wrap_content" 
        android:id="@+id/button_save" 
        android:text="Save"
        android:layout_weight="1"/>
        <Button android:layout_width="fill_parent" 
        android:layout_height="wrap_content" 
        android:id="@+id/button_cancel" 
        android:text="Cancel"
        android:layout_weight="1"/>
    </LinearLayout>
</LinearLayout>