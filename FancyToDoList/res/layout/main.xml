<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
	android:background="@color/bodyBackground_light_grey">
	<LinearLayout style="@style/TitleBar"
	android:id="@+id/itemList_top"
	android:layout_alignParentTop="true">
		
		<ImageButton style="@style/TitleBarBackLogo"
		    android:id="@+id/imageButton_back_logo"
			android:contentDescription="@string/description_back_logo" android:src="@drawable/ic_back_logo"
			android:onClick="onClickHome" />
			
		<TextView style="@style/TitleBarText"
			android:contentDescription="@string/my_wishes" android:text="@string/my_wishes" />
		<ImageButton style="@style/TitleBarAction"
			android:id="@+id/imageButton_search"
			android:contentDescription="@string/description_search" android:src="@drawable/title_search"
			android:onClick="onClickSearch" 
			android:visibility="invisible" />
		<ImageButton style="@style/TitleBarAction"
			android:id="@+id/imageButton_view"
			android:contentDescription="@string/description_view" android:src="@drawable/ic_menu_view"
			android:onClick="onClickView" />
	</LinearLayout>

	<EditText
		android:id="@+id/mySearchText" android:layout_width="fill_parent"
		android:layout_height="wrap_content" android:text="" android:visibility="gone"
		android:hint="@string/search_hint"
	/>
	
	<Spinner 
        android:id="@+id/myViewSpinner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:prompt="@string/change_view_prompt"
        android:layout_gravity="right"
        android:visibility="gone"
    />
	
	<ViewFlipper
    	android:id="@+id/myFlipper"
    	android:layout_width="fill_parent" 
    	android:layout_height="fill_parent">
    	
		<ListView
			android:id="@+id/myListView" android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			android:cacheColorHint="#00000000"
			android:fadingEdge="none"
		/>
		
		<GridView 
		    android:id="@+id/myGridView"
		    android:layout_width="fill_parent" 
		    android:layout_height="wrap_content"
		    android:columnWidth="90dp"
		    android:numColumns="auto_fit"
		    android:stretchMode="columnWidth"
		    android:gravity="center"
		    android:verticalSpacing="5dp"
		    android:horizontalSpacing="5dp"
		/>
	
	</ViewFlipper>
	
</LinearLayout>
